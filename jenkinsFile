pipeline {
    agent {
        docker {
            image 'maven:3.9-eclipse-temurin-17'
            args '-v /root/.m2:/root/.m2'
        }
    }

    environment {
        DEPLOY_DIR = '/home/ubuntu/deployments'
        APP_NAME = 'jenkins-java-app-1.0-SNAPSHOT.jar'
        APP_PORT = '8080/app'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Deploy to EC2 Host') {
            steps {
                sh """
                    mkdir -p ${DEPLOY_DIR}
                    cp target/*.jar ${DEPLOY_DIR}/${APP_NAME}
                """
            }
        }

        stage('Run on EC2 Host') {
            agent none
            steps {
                sh """
                    pkill -f ${APP_NAME} || true
                    nohup java -jar ${DEPLOY_DIR}/${APP_NAME} --server.port=${APP_PORT} --server.address=0.0.0.0 > ${DEPLOY_DIR}/app.log 2>&1 &
                """
            }
        }
    }

    post {
        success {
            echo "Your app is running at: http://13.233.121.148:${APP_PORT}"
        }
    }
}
